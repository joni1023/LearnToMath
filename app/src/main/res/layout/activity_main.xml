<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/numOne"
        style="@style/textoprimario"
        android:layout_marginStart="80dp"
        android:text="@string/numero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <TextView
        android:id="@+id/numtwo"
        style="@style/textoprimario"
        android:layout_marginStart="76dp"
        android:text="@string/numero"
        app:layout_constraintStart_toEndOf="@+id/signed"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <EditText
        android:id="@+id/result"
        style="@android:style/Widget.Material.Light.EditText"
        android:layout_width="174dp"
        android:layout_height="46dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:maxLength="3"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numtwo" />

    <Button
        android:id="@+id/btn_confirm"
        style="@style/buttonstyle.large"
        android:layout_marginTop="32dp"
        android:backgroundTintMode="src_atop"
        android:text="@string/confirmar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
        android:id="@+id/btn_suma"
        style="@style/buttonstyle"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:text="@string/suma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_resta"
        style="@style/buttonstyle"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:text="@string/resta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signed"
        style="@style/textoprimario"
        android:layout_marginStart="76dp"
        android:text="@string/signo"
        app:layout_constraintStart_toEndOf="@+id/numOne"
        app:layout_constraintTop_toTopOf="@+id/guideline" />


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="327dp"
        android:layout_height="29dp"
        android:progressDrawable="@android:drawable/progress_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_confirm"
        app:layout_constraintVertical_bias="0.143" />

    <TextView
        android:id="@+id/textView"
        style="@style/textosecundario"
        android:layout_marginStart="148dp"
        android:text="@string/progreso"
        app:layout_constraintBottom_toTopOf="@+id/progressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_confirm"
        app:layout_constraintVertical_bias="0.411" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="142dp" />

    <Button
        android:id="@+id/btn_mult"
        style="@style/buttonstyle"
        android:layout_marginStart="40dp"
        android:text="@string/multiplicar"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_suma"
        app:layout_constraintVertical_bias="0.466" />

    <Button
        android:id="@+id/btn_div"
        style="@style/buttonstyle"
        android:layout_marginEnd="40dp"
        android:text="@string/division"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_resta"
        app:layout_constraintVertical_bias="0.451" />

    <TextView
        android:id="@+id/nivel"
        style="@style/textosecundario"
        android:layout_marginTop="24dp"
        android:text="@string/nivel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />


</androidx.constraintlayout.widget.ConstraintLayout>